<div class="container">
  <div id="carouselExample" class="carousel slide">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://www.guide-auto.com/wp-content/uploads/2022/10/ds-4-2021-3-4-anteriore-1024x576.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="https://www.carouleraoul.com/wp-content/uploads/2022/11/raw-1080x600.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="https://americarprestige.com/wp-content/uploads/2019/07/location-lamborghini-urus-1.jpg" class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>


  <div class="container-cards-flex">
      <div class="cards">
          <div>
              <% @cars.each do |car| %>
                <div class="card-mini" style="background-image: url()">
                </div>
                <p> <%= car.model %> </p>
                <% car.id %>
                <p> Price: <%= car.price %> </p>
              <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
