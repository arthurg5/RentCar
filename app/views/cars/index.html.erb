<div class="cars-container-home mt-5">
  <div class="row">
    <div class="col-12">
      <div class="row mt-5 cards-grid">
         <% @cars.each do |car| %>
          <div class= "col-3 mb-4">
            <div class="card h-100">
              <img src="https://source.unsplash.com/random/800x600/?<%= "#{car.model}" %>" alt="car picture" class="img-sizing-home">
              <p class="model-text-homepage mt-2"> <%= car.model %> </p>
              <p class="card-text-homepage"> Price: <%= car.price %> per day </p>
              <div class="d-flex justify-content-between align-items-center mb-4" >
                <%= link_to 'More infos', car_path(car), class: 'link-home' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
