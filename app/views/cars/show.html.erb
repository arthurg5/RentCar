<div class="container">
  <h3 class="card-title mt-3 mb-3"><%= @car.model %></h3>
  <br>
  <div class="row">
    <div class="col-sm-6 d-flex box1">
       <img src="https://images.unsplash.com/photo-1502877338535-766e1452684a?q=80&w=2072&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="img-border-left-radius">
      <!-- Existing car images code -->
    </div>

    <div class="col-sm-6 d-flex">
      <div class="d-flex box2">
        <!-- Existing mini-pics code -->
        <img class="mini-pic mini-pic1" src="https://images.unsplash.com/photo-1494976388531-d1058494cdd8?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8dm9pdHVyZXxlbnwwfHwwfHx8MA%3D%3D" alt="voiture 1">
        <img class="mini-pic mini-pic2 img-border-right-top-radius"src="https://plus.unsplash.com/premium_photo-1664391822888-2a056656af71?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTN8fHZvaXR1cmV8ZW58MHx8MHx8fDA%3D" alt="voiture 2">
        <img class="mini-pic mini-pic3" src="https://images.unsplash.com/photo-1494905998402-395d579af36f?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fHZvaXR1cmV8ZW58MHx8MHx8fDA%3D" alt="voiture 3">
        <img class="mini-pic mini-pic4 img-border-right-bottom-radius" src="https://images.unsplash.com/photo-1489824904134-891ab64532f1?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTF8fHZvaXR1cmV8ZW58MHx8MHx8fDA%3D" alt="voiture 4">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card-big">
        <div class="card-body">
          <div class="d-flex mt-4">
            <div class="box mt-3">
              <h4 class="card-title text-start mb-3"><%= @car.model %></h4>
              <p class="card-text-bigger"><%= @car.description %></p>
              <!-- Other car details -->
              <p class="card-text-bigger"> Year: <%= @car.year %></p>
              <p class="card-text-bigger">Color: <%= @car.color %></p>
              <p class="card-text-bigger">Powered with: <%= @car.fuel %></p>
              <p class="card-text-bigger">Price: <%= @car.price %></p>
              <p class="card-text-bigger">Address: <%= @car.address %></p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6 pr-0">
      <!-- Booking form card -->
      <div class="card mt-3" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); color: black;">
        <div class="card-body">
          <%= render 'bookings/new', booking: Booking.new, car: @car %>
        </div>
      </div>
    </div>
  </div>
</div>
