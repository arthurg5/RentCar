<div class="container">
 <div class="card-big">

    <div class="card-body">
      <h3 class="card-title"> <%= @car.model %></h3>
        <div class="d-flex mt-4">
          <div class="box">

            <% if @car.photos.present? %>
              <% @car.photos.each do |photo| %>
                <%= cl_image_tag photo.key, height: 200, width: 300, crop: :fill %>
              <% end %>
            <% else %>
              <img src="https://m.media-amazon.com/images/I/71E32iPE92L.__AC_SY300_SX300_QL70_ML2_.jpg" class="img-sizing">
            <% end %>

          </div>
          <div class="box mt-3">
            <p> <%= @car.description %> </p>
            <p class="card-text-bigger"> Year: <%= @car.year %></p>
            <p class="card-text-bigger">Color: <%= @car.color %></p>
            <p class="card-text-bigger">Powered with: <%= @car.fuel %></p>
            <p class="card-text-bigger">Price: <%= @car.price %></p>
          </div>
          </div>
    </div>

    <div class="d-flex flex-row mb-3">
      <button type="button" class="btn-gradient"> <%= link_to "Book this car", new_car_booking_path(@car) %> </button>
      <button type="button" class="btn-gradient"> <%= link_to "Dashboard", dashboard_path %> </button>
      <!-- <button type="button" class="btn-gradient"> <%= link_to "Edit car's infos", edit_car_path %> </button> -->
    </div>
  </div>
</div>
