<div class="container">
  <h1>Change the status of the Booking from <%= @booking.user.first_name %><%= @booking.user.last_name %></h1>
  <%= simple_form_for @booking do |f| %>
  <%= f.input :status, collection: Booking::STATUS %>
  <%= f.button :submit, 'Edit Booking Status', class: 'btn btn-primary' %>
  <% end %>
</div>
