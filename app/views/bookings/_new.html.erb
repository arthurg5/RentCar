<h2 class="car-description-show-light my-4">Create a Booking</h2>
<%= simple_form_for([car, booking]) do |f| %>
  <div class="form-group">
    <%= f.input :start_date, as: :string, input_html: { id: "booking_start_date", data: { controller: "datepicker" }, class: "form-control white-input form-control-input", placeholder: "DD-MM-YYYY" } %>
  </div>
  <div class="form-group">
    <%= f.input :end_date, as: :string, input_html: { id: "booking_end_date", data: { controller: "datepicker" }, class: "form-control white-input form-control-input", placeholder: "DD-MM-YYYY" } %>
  </div>
  <%= f.button :submit, "Create Booking", class: "btn btn-primary" %>
<% end %>
